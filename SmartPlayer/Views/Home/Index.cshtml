@section scripts {
    @Scripts.Render("~/Scripts/main.js")
    @Scripts.Render("~/Scripts/typeahead.bundle.min.js")
}

@using System.Web.Mvc
<div>    
    <div class="startPlayer">
        <p>Choose a song and start listening to the perfect music for your mood!</p>

        <input class="typeahead" type="text" placeholder="Song">
        <button class="playBtn btn btn-default" onclick="playSelectedSong()">Play</button>
    </div>

    <div class="player">
        <audio controls>
            <source src="" type="audio/mpeg">
        </audio>
        <p class="songName">Song</p>
        <div class="like" title="Like" onclick="likeCurrentSong()">Like</div>
        <div class="dislike" title="Dislike" onclick="dislikeCurrentSong()">Dislike</div>
        <button class="nextSong">
            <div class="icon"></div>
            <div class="label">Next Song</div>
        </button>
    </div>

    <div class="uploadFiles">
        <form enctype="multipart/form-data" method="post" action="http://localhost/api/Music/Upload"
              id="ajaxUploadForm" novalidate="novalidate">
            <fieldset>
                <legend>Upload Song</legend>
                <input type="file" id="fileInput" name="fileInput" onchange="handleFiles(files)">
                <div class="errorMessage"></div>
                <input type="submit" value="Upload" id="ajaxUploadButton" class="btn">
            </fieldset>
        </form>
    </div>
</div>